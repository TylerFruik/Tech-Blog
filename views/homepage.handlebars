{{#each posts as |post| }}
<div class="post">
  <div class="row mb-4">
    <h2>
      <a class="postTitle" href="/post/{{post.id}}">{{post.name}}</a>
    </h2>
    <p class="postInfo text-right">Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p class="postContent">
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}
